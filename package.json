{
  "name": "media-player-ui",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite --port 5173",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --fix",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5174 && electron .\"",
    "build:electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "format": "prettier --write \"src/**/*.{js,vue,ts,css,scss,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,vue,ts,css,scss,json,md}\"",
    "lint:fix": "eslint --ext .js,.vue src --fix"
  },
  "build": {
    "appId": "com.rami.media-player",
    "productName": "Media Player UI",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.video"
    }
  },
  "dependencies": {
    "@fontsource/roboto": "5.2.5",
    "@mdi/font": "7.4.47",
    "chokidar": "^4.0.3",
    "node-mpv": "^1.5.0",
    "vue": "^3.5.13",
    "vuetify": "^3.8.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "concurrently": "^9.1.2",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-vuetify": "^4.0.0",
    "eslint-plugin-prettier": "^5.5.0",
    "globals": "^16.0.0",
    "pinia": "^3.0.1",
    "prettier": "^3.5.3",
    "sass-embedded": "^1.86.3",
    "unplugin-auto-import": "^19.1.1",
    "unplugin-fonts": "^1.3.1",
    "unplugin-vue-components": "^28.4.1",
    "unplugin-vue-router": "^0.12.0",
    "vite": "^6.2.2",
    "vite-plugin-vue-layouts-next": "^0.0.8",
    "vite-plugin-vuetify": "^2.1.1",
    "vue-router": "^4.5.0",
    "wait-on": "^8.0.3"
  }
}
